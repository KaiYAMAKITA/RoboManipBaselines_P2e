<mujoco model="ur5e_cloth">
  <include file="./env_common.xml"/>

  <size memory="1G"/>

  <asset>
    <texture name="cloth" type="2d" file="cloth/cloth.png"/>
    <material name="cloth" texture="cloth"/>
  </asset>

  <include file="../robots/ur5e/ur5e_integrated_config.xml"/>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true" diffuse="0.5 0.5 0.5"/>

    <camera name="front" mode="fixed" pos="0.5 0.0 1.5" euler="0.0 0.785398 1.5708"/>
    <camera name="side" mode="fixed" pos="-0.1 -0.75 0.9" euler="1.5708 0.0 0.0"/>

    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

    <body name="table">
      <geom type="box" size="0.275 0.5 0.4" pos="0 0 0.4" material="table_base"/>
      <geom type="box" size="0.275 0.5 0.0075" pos="0 0 0.8075" material="marble1"/>
    </body>

    <body name="stand">
      <geom type="box" size="0.33 0.33 0.4" pos="-0.605 0 0.4" material="stand"/>
    </body>

    <body name="ur5e_root_frame" pos="-0.605 0.0 0.8">
      <include file="../robots/ur5e/ur5e_integrated_body.xml"/>
    </body>

    <body name="cloth_root_frame" pos="0.1 -0.02 1.1" euler="0.0 0.0 -0.785398">
      <body name="B0_0" pos="0.0 -0.18 0.0" euler="0.0 0.0 1.5708">
        <composite type="cloth" count="10 7 1" spacing="0.04" flatinertia="0.01">
          <joint kind="main" damping="0.001"/>
          <skin material="cloth" texcoord="true" inflate="0.005" subgrid="2"/>
          <geom type="capsule" size="0.015 0.01"/>
        </composite>
      </body>

      <body name="board" pos="0.06 0.0 0.0">
        <geom name="board" type="box" size="0.06 0.2 0.005" rgba="0.8 0.8 0.2 0.4"/>
      </body>
    </body>
  </worldbody>

  <equality>
    <weld body1="B0_0"/>
    <weld body1="B1_0"/>
    <weld body1="B2_0"/>
    <weld body1="B3_0"/>
    <weld body1="B4_0"/>
    <weld body1="B5_0"/>
    <weld body1="B6_0"/>
    <weld body1="B7_0"/>
    <weld body1="B8_0"/>
    <weld body1="B9_0"/>
  </equality>
</mujoco>
