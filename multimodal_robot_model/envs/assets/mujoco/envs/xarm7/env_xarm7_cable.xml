    </body>

    <body name="cable" pos="-0.08 0.2 0.755" quat="0.707105 0 0 -0.707108">
      <include file="../../objects/cable.xml"/>
    </body>

    <body name="cable_end" pos="-0.08 -0.28 0.755" euler="0 0 -1.5708">
